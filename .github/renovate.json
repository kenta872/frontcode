{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:best-practices"],
    "branchPrefix": "renovate/",
    "labels": ["renovate"],
    "baseBranches": ["beta"],
    "packageRules": [
        {
          "matchUpdateTypes": ["patch"],
          "labels": ["patch"]
        },
        {
          "matchUpdateTypes": "major",
          "labels": ["major"]
        },
        {
          "matchUpdateTypes": "minor",
          "labels": ["minor"]
        }
    ]
}
